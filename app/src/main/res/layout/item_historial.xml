<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    android:elevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Letra inicial (círculo) -->
        <TextView
            android:id="@+id/tv_inicial"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/bg_code_input"
            android:backgroundTint="@color/button_secondary"
            android:gravity="center"
            android:text="D"
            android:textColor="@color/text_btn"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre del curso -->
        <TextView
            android:id="@+id/tv_nombreCurso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="DESARROLLO DE APLICACIONES MÓVILES I"
            android:textColor="@color/text_btn"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@id/tv_inicial"
            app:layout_constraintTop_toTopOf="@id/tv_inicial"
            app:layout_constraintEnd_toStartOf="@id/tv_asistencia" />

        <!-- Modalidad -->
        <TextView
            android:id="@+id/tv_modalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:text="PRESENCIAL"
            android:textSize="12sp"
            android:textColor="@color/primary"
            app:layout_constraintStart_toEndOf="@id/tv_inicial"
            app:layout_constraintTop_toBottomOf="@id/tv_nombreCurso" />

        <!-- Asistencias (x/x) -->
        <TextView
            android:id="@+id/tv_asistencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7/10"
            android:textColor="@color/text_btn"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nombreCurso" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
