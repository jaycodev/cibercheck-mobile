<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.VerificationCodeActivity">

    <!-- ðŸ”¹ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_verification_code"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/space_16"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleCentered="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="@dimen/icon_24"
                android:layout_height="@dimen/icon_24"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_logo_cibercheck" />

            <!-- AquÃ­ ponemos un margen entre logo y texto -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/app_name"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <!-- ðŸ”¹ TÃ­tulo -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_16"
        android:layout_marginTop="@dimen/space_32"
        android:text="@string/title_verification"
        android:textColor="@color/black"
        android:textSize="@dimen/text_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_verification_code"
        />

    <!-- ðŸ”¹ DescripciÃ³n -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_16"
        android:layout_marginTop="@dimen/space_8"
        android:text="@string/text_message_verification_email"
        android:textColor="@color/neutral_dark"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

    <!-- ðŸ”¹ Correo del usuario -->
    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_16"
        android:layout_marginTop="@dimen/space_4"
        android:text="@string/txt_email"
        android:textColor="@color/state_ok"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion" />

    <!-- ðŸ”¹ Cajas del cÃ³digo -->
    <LinearLayout
        android:id="@+id/layoutCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_32"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ”¸ Campo reutilizable (1 de 4) -->
        <EditText
            android:id="@+id/et1"
            style="@style/VerificationCodeInput"
            android:hint="C1"
            android:importantForAccessibility="yes" />

        <EditText
            android:id="@+id/et2"
            style="@style/VerificationCodeInput"
            android:hint="C1"
            android:importantForAccessibility="yes" />

        <EditText
            android:id="@+id/et3"
            style="@style/VerificationCodeInput"
            android:hint="C1"
            android:importantForAccessibility="yes" />

        <EditText
            android:id="@+id/et4"
            style="@style/VerificationCodeInput"
            android:hint="C1"
            android:importantForAccessibility="yes" />
    </LinearLayout>

    <!-- ðŸ”¹ BotÃ³n â€œNo recibÃ­ el cÃ³digoâ€ -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNoRecibi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="40dp"
        android:text="@string/btn_not_code"
        android:textAllCaps="false"
        android:textColor="@color/text_btn"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/button_secondary"
        app:layout_constraintTop_toBottomOf="@id/layoutCodigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ BotÃ³n â€œVolverâ€ -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="12dp"
        android:text="@string/btn_return"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/button_primary"
        app:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnNoRecibi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
