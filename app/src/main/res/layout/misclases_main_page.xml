<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/button_secundary"
    android:paddingHorizontal="20dp"
    tools:context=".MisClasesActivity">

    <!-- Toolbar / Header -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_misClases"
        android:layout_width="364dp"
        android:layout_height="71dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/miperfil_topbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_logo_cibercheck" />

            <TextView
                android:id="@+id/tv_micuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/app_name"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Título -->
    <TextView
        android:id="@+id/txtMisClases"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/title_mis_clases"
        android:textColor="@color/text_btn"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_misClases" />

    <!-- Lista de clases -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_misClases"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/btn_marcarAsistencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMisClases"
        tools:listitem="@layout/item_curso" />

    <!-- Botón Historial -->

    <!-- Botón Marcar Asistencia -->

    <Button
        android:id="@+id/btn_historial"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/button_secundary"
        android:backgroundTintMode="src_in"
        android:elevation="2dp"
        android:strokeColor="@color/neutral_medium"
        android:text="@string/btn_historial"
        android:textAllCaps="false"
        android:textColor="@color/text_btn"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_marcarAsistencia"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/neutral_dark" />

    <Button
        android:id="@+id/btn_marcarAsistencia"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/button_secundary"
        android:backgroundTintMode="src_in"
        android:drawableEnd="@drawable/ic_qr_logo"
        android:drawablePadding="8dp"
        android:elevation="3dp"
        android:text="@string/btn_marcar_asistencia"
        android:textAllCaps="false"
        android:textColor="@color/text_btn"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/neutral_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>
