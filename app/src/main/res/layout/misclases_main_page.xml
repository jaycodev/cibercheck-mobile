<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MisClasesActivity">

    <!-- ðŸ”¹ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_misClases"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/space_16"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleCentered="false"
        app:menu="@menu/miperfil_topbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/space_16">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/icon_24"
                android:layout_height="@dimen/icon_24"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_logo_cibercheck" />

            <TextView
                android:id="@+id/tv_micuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:text="@string/brand_cibercheck"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>


    <!-- ðŸ”¹ TÃ­tulo principal -->
    <TextView
        android:id="@+id/txtMisClases"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:paddingHorizontal="@dimen/space_16"
        android:text="@string/title_mis_clases"
        android:textColor="@color/black"
        android:textSize="@dimen/text_20"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tb_misClases"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ðŸ”¹ DescripciÃ³n opcional -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:paddingHorizontal="@dimen/space_16"
        android:textColor="@color/neutral_dark"
        android:textSize="@dimen/text_14"
        app:layout_constraintTop_toBottomOf="@id/txtMisClases"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="AquÃ­ puedes revisar tus clases programadas y tu historial de asistencia." />


    <!-- ðŸ”¹ Lista de clases -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_misClases"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_16"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
        app:layout_constraintBottom_toTopOf="@id/layout_botones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_curso" />


    <!-- ðŸ”¹ Contenedor inferior de botones -->
    <LinearLayout
        android:id="@+id/layout_botones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_32"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_historial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_historial"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            app:backgroundTint="@color/button_primary"
            app:cornerRadius="25dp"
            app:rippleColor="@color/primary_dark" />

        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_marcarAsistencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_marcar_asistencia"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            app:backgroundTint="@color/button_primary"
            app:cornerRadius="25dp"
            app:elevation="2dp"
            app:icon="@drawable/ic_qr_logo"
            app:iconTint="@android:color/white"
            app:iconPadding="@dimen/space_8"
            app:iconGravity="textStart"
            app:rippleColor="@color/primary_dark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
