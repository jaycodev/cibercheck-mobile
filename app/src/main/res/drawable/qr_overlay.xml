<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo semi-transparente oscuro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88000000"/> <!-- negro con transparencia -->
        </shape>
    </item>

    <!-- Cuadro transparente con borde blanco translúcido -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="300dp" android:height="300dp"/> <!-- tamaño del cuadrado -->
            <solid android:color="@android:color/transparent"/> <!-- centro transparente -->
            <stroke android:color="#33FFFFFF" android:width="20dp"/> <!-- borde blanco semi-transparente -->
        </shape>
    </item>

</layer-list>
